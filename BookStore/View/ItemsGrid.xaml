<UserControl x:Class="BookStore.View.ItemsGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id">

                </DataGridTextColumn>
                <DataGridTextColumn Width="200" Header="Name">

                </DataGridTextColumn>
                <DataGridTextColumn Width="100" Header="Manufacturer">

                </DataGridTextColumn>
                <DataGridTextColumn Header="Base Price">

                </DataGridTextColumn>
                <DataGridTextColumn Header="Added date">

                </DataGridTextColumn>
                <DataGridTextColumn Header="Added by">

                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
